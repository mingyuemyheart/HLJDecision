<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_top"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivPortrait"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/iv_portrait" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="决策气象用户登录"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_3" />
    </LinearLayout>

    <TextView
        android:layout_width="250dip"
        android:layout_height="0.5dip"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="250dip"
        android:layout_height="45dip"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/llNegative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_left_btn"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvNegtive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="以后再说"
                android:textColor="@color/blue"
                android:textSize="@dimen/level_4" />
        </LinearLayout>

        <TextView
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/llPositive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_right_btn"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马上登录"
                android:textColor="@color/red"
                android:textSize="@dimen/level_4" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>