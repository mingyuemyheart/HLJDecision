<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/tvMinute"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_left_blue"
        android:gravity="center"
        android:text="分钟"
        android:textColor="@color/white"
        android:textSize="@dimen/level_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHour"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/corner_right_white"
        android:gravity="center"
        android:text="小时"
        android:textColor="@color/text_color4"
        android:textSize="@dimen/level_5"
        app:layout_constraintBottom_toBottomOf="@+id/tvMinute"
        app:layout_constraintStart_toEndOf="@+id/tvMinute"
        app:layout_constraintTop_toTopOf="@+id/tvMinute" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/corner_left_right_white"
        android:gravity="center"
        android:text="选择时间"
        android:textColor="@color/text_color4"
        android:textSize="@dimen/level_5"
        app:layout_constraintBottom_toBottomOf="@+id/tvHour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvHour"
        app:layout_constraintTop_toTopOf="@+id/tvHour" />

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_left_gray"
        android:gravity="center"
        android:text="选择区域"
        android:textColor="@color/text_color4"
        android:textSize="@dimen/level_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMinute" />

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_edittext3"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="60dp"
        android:text="点击选择区域"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLabel"
        app:layout_constraintTop_toTopOf="@+id/tvLabel" />

    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_right_check"
        android:gravity="center"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLabel" />

    <LinearLayout
        android:id="@+id/clMinute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#EAEFF7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel">

        <TextView
            android:id="@+id/tvStationNameMinute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="站名"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5" />

        <TextView
            android:id="@+id/tvStationCodeMinute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="站号"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5" />

        <TextView
            android:id="@+id/tvTimeMinute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="时间"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5" />

        <TextView
            android:id="@+id/tvRainMinute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="雨量\n(mm)"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewMinute"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:dividerHeight="0.0dp"
        android:listSelector="@color/transparent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clMinute" />

    <HorizontalScrollView
        android:id="@+id/hScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/clHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAEFF7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="所属区域"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvStationName"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="站名"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvStationCode"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="站号"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="时间"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvRain"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="雨量\n(mm)"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="温度\n(℃)"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="湿度\n(%)"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvWinds"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="风速\n(m/s)"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvWindd"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="风向\n(度)"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <TextView
                    android:id="@+id/tvVis"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="能见度\n(km)"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />
            </LinearLayout>

            <com.hlj.view.ScrollviewListview
                android:id="@+id/listViewHour"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0.0dp"
                android:listSelector="@color/transparent"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clHour" />

        </android.support.constraint.ConstraintLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择站点或区域以显示数据"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/level_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a0000000"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>