<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main2"
    android:orientation="vertical">

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="#a0ffffff"
        android:textSize="@dimen/level_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reTitle" />

    <TextView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="人员信息"
        android:textColor="@color/white"
        android:textSize="@dimen/level_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLevel" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_corner_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person">

        <ImageView
            android:id="@+id/ivName"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/addr_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="姓名"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5"
            app:layout_constraintBottom_toBottomOf="@+id/ivName"
            app:layout_constraintStart_toEndOf="@+id/ivName"
            app:layout_constraintTop_toTopOf="@+id/ivName" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivName" />

        <ImageView
            android:id="@+id/ivUnit"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/addr_job"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="单位"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5"
            app:layout_constraintBottom_toBottomOf="@+id/ivUnit"
            app:layout_constraintStart_toEndOf="@+id/ivUnit"
            app:layout_constraintTop_toTopOf="@+id/ivUnit" />

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUnit" />

        <ImageView
            android:id="@+id/ivJob"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/addr_job"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUnit" />

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="职务"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5"
            app:layout_constraintBottom_toBottomOf="@+id/ivJob"
            app:layout_constraintStart_toEndOf="@+id/ivJob"
            app:layout_constraintTop_toTopOf="@+id/ivJob" />

        <TextView
            android:id="@+id/tvJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivJob" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_corner_gray"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvJob">

            <ImageView
                android:id="@+id/ivPhone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/addr_tel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="单位电话"
                android:textColor="@color/text_color4"
                android:textSize="@dimen/level_5"
                app:layout_constraintBottom_toBottomOf="@+id/ivPhone"
                app:layout_constraintStart_toEndOf="@+id/ivPhone"
                app:layout_constraintTop_toTopOf="@+id/ivPhone" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone" />

            <TextView
                android:id="@+id/tvPhoneCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_4"
                app:layout_constraintEnd_toStartOf="@+id/tvPhoneDial"
                app:layout_constraintTop_toTopOf="@+id/ivPhone" />

            <TextView
                android:id="@+id/tvPhoneDial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_green"
                android:gravity="center"
                android:text="拨打"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivPhone" />

            <ImageView
                android:id="@+id/ivMobile"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/addr_mobile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhone" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="手机号"
                android:textColor="@color/text_color4"
                android:textSize="@dimen/level_5"
                app:layout_constraintBottom_toBottomOf="@+id/ivMobile"
                app:layout_constraintStart_toEndOf="@+id/ivMobile"
                app:layout_constraintTop_toTopOf="@+id/ivMobile" />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobile" />

            <TextView
                android:id="@+id/tvMobileCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_4"
                app:layout_constraintEnd_toStartOf="@+id/tvMobileDial"
                app:layout_constraintTop_toTopOf="@+id/ivMobile" />

            <TextView
                android:id="@+id/tvMobileDial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_green"
                android:gravity="center"
                android:text="拨打"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivMobile" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>